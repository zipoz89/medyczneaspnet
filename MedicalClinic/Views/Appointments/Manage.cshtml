@model MedicalClinic.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Managing Appointment</h1>

<div>
    <hr />
    @if (ViewBag.PatientAvatar != null)
    {
        <img style="width:120px;height:120px ; img-fluid; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(ViewBag.PatientAvatar))">
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Manage">
        <div class="form-group">
            <label asp-for="Note" class="control-label"></label>
            <input asp-for="Note" name="note" class="form-control" maxlength="200" />
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Mark as held" class="btn btn-success" /> |
        <a asp-action="Doctor">Back to List</a>
    </form>
</div>
